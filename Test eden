package WCA;

import java.net.URI;
import java.net.URL;
import java.net.URLConnection;
import java.util.List;
import java.util.Map;

public class WebContentAnalyzer {
    public static void main(String[] args) {
        try {
            URI uri = URI.create("http://www.facebook.com");
            URL url = uri.toURL();
            URLConnection urlConnection = url.openConnection();
            Map<String, List<String>> headers = urlConnection.getHeaderFields();
            System.out.println("Opened file with content like : ");
            for (Map.Entry<String, List<String>> entry : headers.entrySet()) {
                System.out.println(entry.getKey() + ": " + entry.getValue());
            }
        } catch (Exception e) {
            e.printStackTrace();
            System.out.println("Number of lines in the document : ");
            System.out.println("Line number with max characters : ");
            System.out.println("Number of characters in the line number with max characters : ");
        }
    }
}

